<Window x:Class="Monopoly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly"
        mc:Ignorable="d"
        Title="MainWindow" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Left" Height="693.934" Width="1373.334">
    <Grid Background="Gray" ShowGridLines="True" Margin="0,0,0,1.143" HorizontalAlignment="Left" Width="1363">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Stretch="Fill" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Source="Images/board.jpg" StretchDirection="DownOnly" Margin="0,0,215.286,-0.286"/>

        <!--Player1 image-->
        <Image x:Name="imgPlayer1" HorizontalAlignment="Left" Height="40" Margin="640,30,0,0" VerticalAlignment="Top" Width="40"/>

        <Grid x:Name="GridControls" Grid.Row="0" Background="#FFCDE3C7" Margin="693,1,317.857,0" Grid.ColumnSpan="2">
            <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="10,633,0,0" VerticalAlignment="Top" Width="75" Click="BtnStart_Click"/>
            <Button x:Name="btnQuit" Content="Quit Game" HorizontalAlignment="Left" Margin="253,633,0,0" VerticalAlignment="Top" Width="75" Click="BtnQuit_Click"/>
            <Button x:Name="btnInfo" Content="Info" HorizontalAlignment="Left" Margin="173,633,0,0" VerticalAlignment="Top" Width="75" Click="BtnInfo_Click"/>
            <Button x:Name="btnRules" Content="Rules" HorizontalAlignment="Left" Margin="90,633,0,0" VerticalAlignment="Top" Width="75" Click="BtnRules_Click"/>
            <RadioButton x:Name="btn2Player" Content="2 Players" HorizontalAlignment="Left" Margin="10,522,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="2"/>
            <RadioButton x:Name="btn3Player" Content="3 Players" HorizontalAlignment="Left" Margin="10,537,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="3"/>
            <RadioButton x:Name="btn4Player" Content="4 Players" HorizontalAlignment="Left" Margin="10,552,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="4"/>
            <RadioButton x:Name="btn5Player" Content="5 Players" HorizontalAlignment="Left" Margin="10,567,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="5"/>
            <RadioButton x:Name="btn6Player" Content="6 Players" HorizontalAlignment="Left" Margin="10,582,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="6"/>
            <RadioButton x:Name="btn7Player" Content="7 Players" HorizontalAlignment="Left" Margin="10,597,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="7"/>
            <RadioButton x:Name="btn8Player" Content="8 Players" HorizontalAlignment="Left" Margin="10,612,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="8"/>
            <Label x:Name="label" Content="Current Player" HorizontalAlignment="Left" Margin="90,488,0,0" VerticalAlignment="Top" FontSize="14" RenderTransformOrigin="0.122,1.303" FontWeight="Bold"/>

            <!--Default Image, Holds the image of the current player-->
            <Image x:Name="imgCurrentPlayer" Margin="90,522,158,44" Source="Images/default.jpg" StretchDirection="DownOnly" Stretch="Fill"/>

        </Grid>
        <Grid x:Name="grdPlayerPiece" Grid.Column="1" Grid.Row="0" Background="#FFCDE3C7" Margin="133.143,0,-15.714,395.714">

            <!--Player Pieces-->
            <Image x:Name="image" HorizontalAlignment="Left" Height="70" Margin="20,67,0,0" VerticalAlignment="Top" Width="70" Source="Images/hatPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="0"/>
            <Image x:Name="image_Copy" HorizontalAlignment="Left" Height="70" Margin="94,67,0,0" VerticalAlignment="Top" Width="70" Source="Images/boatPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="1"/>
            <Image x:Name="image_Copy1" HorizontalAlignment="Left" Height="70" Margin="169,67,0,0" VerticalAlignment="Top" Width="70" Source="Images/carPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="2"/>
            <Image x:Name="image_Copy2" HorizontalAlignment="Left" Height="70" Margin="243,67,0,0" VerticalAlignment="Top" Width="70" Source="Images/dogPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="3"/>
            <Image x:Name="image_Copy3" HorizontalAlignment="Left" Height="70" Margin="20,141,0,0" VerticalAlignment="Top" Width="70" Source="Images/bootPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="4"/>
            <Image x:Name="image_Copy4" HorizontalAlignment="Left" Height="70" Margin="94,141,0,0" VerticalAlignment="Top" Width="70" Source="Images/wheelbarrowPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="5"/>
            <Image x:Name="image_Copy5" HorizontalAlignment="Left" Height="70" Margin="169,141,0,0" VerticalAlignment="Top" Width="70" Source="Images/ironPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="6"/>
            <Image x:Name="image_Copy6" HorizontalAlignment="Left" Height="70" Margin="243,141,0,0" VerticalAlignment="Top" Width="70" Source="Images/thimblePiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="7"/>

            <Button x:Name="btnConfirmPlayerPiece" Content="Confirm Piece" HorizontalAlignment="Left" Margin="103,219,0,0" FontSize="18px" VerticalAlignment="Top" Width="132" Height="32" Click="BtnConfirmPlayerPiece_Click"/>
            <Label x:Name="lblPick" Content="Pick Your Piece" FontSize="18px" HorizontalAlignment="Left" Margin="103,20,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.417,0.092" FontWeight="Bold"/>

        </Grid>
        <Grid x:Name="grdDice" Grid.Column="1" HorizontalAlignment="Left" Height="286" Margin="135.429,259,-16.143,0" Background="#FFCDE3C7" VerticalAlignment="Top" Width="335">

            <Button x:Name="btnRoll" Content="Roll" HorizontalAlignment="Left" Margin="127,223,0,0" VerticalAlignment="Top" Width="75" Click="BtnRoll_Click" FontSize="18"/>

            <Label x:Name="label2" Content="Die one:" HorizontalAlignment="Left" Margin="19,81,0,0" VerticalAlignment="Top" FontSize="18"/>
            <Label x:Name="lblDie1" Content="Label" HorizontalAlignment="Left" Margin="94,81,0,0" VerticalAlignment="Top" FontSize="18"/>

            <Label x:Name="label3" Content="Die Two:" HorizontalAlignment="Left" Margin="167,81,0,0" VerticalAlignment="Top" FontSize="18"/>
            <Label x:Name="lblDie2" Content="Label" HorizontalAlignment="Left" Margin="245,81,0,0" VerticalAlignment="Top" FontSize="18"/>
            <Label x:Name="lblTotal" Content="Total" HorizontalAlignment="Left" Margin="139,157,0,0" VerticalAlignment="Top" FontWeight="Bold" BorderThickness="0" FontSize="18"/>
        </Grid>
    </Grid>
</Window>
