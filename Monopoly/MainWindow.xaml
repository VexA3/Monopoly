<Window x:Class="Monopoly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly"
        mc:Ignorable="d"
        Title="MainWindow" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Left" Height="693.934" Width="1021.334">
    <Grid Background="Gray" ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Stretch="Uniform" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Source="Images/board.jpg" StretchDirection="DownOnly"/>
        <Grid x:Name="GridControls" Grid.Column="2" Grid.Row="0" Background="#FFCDE3C7">
            <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="10,633,0,0" VerticalAlignment="Top" Width="75" Click="BtnStart_Click"/>
            <Button x:Name="btnQuit" Content="Quit Game" HorizontalAlignment="Left" Margin="253,633,0,0" VerticalAlignment="Top" Width="75" Click="BtnQuit_Click"/>
            <Button x:Name="btnInfo" Content="Info" HorizontalAlignment="Left" Margin="173,633,0,0" VerticalAlignment="Top" Width="75" Click="BtnInfo_Click"/>
            <Button x:Name="btnRules" Content="Rules" HorizontalAlignment="Left" Margin="90,633,0,0" VerticalAlignment="Top" Width="75" Click="BtnRules_Click"/>
            <RadioButton x:Name="btn2Player" Content="2 Players" HorizontalAlignment="Left" Margin="10,522,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="2"/>
            <RadioButton x:Name="btn3Player" Content="3 Players" HorizontalAlignment="Left" Margin="10,537,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="3"/>
            <RadioButton x:Name="btn4Player" Content="4 Players" HorizontalAlignment="Left" Margin="10,552,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="4"/>
            <RadioButton x:Name="btn5Player" Content="5 Players" HorizontalAlignment="Left" Margin="10,567,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="5"/>
            <RadioButton x:Name="btn6Player" Content="6 Players" HorizontalAlignment="Left" Margin="10,582,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="6"/>
            <RadioButton x:Name="btn7Player" Content="7 Players" HorizontalAlignment="Left" Margin="10,597,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="7"/>
            <RadioButton x:Name="btn8Player" Content="8 Players" HorizontalAlignment="Left" Margin="10,612,0,0" VerticalAlignment="Top" Checked="RadioBtnPlayer_Checked" Tag="8"/>

            <Label x:Name="label1" Content="Pick Your Piece" HorizontalAlignment="Left" Margin="135,5,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label x:Name="label" Content="Current Player" HorizontalAlignment="Left" Margin="222,482,0,0" VerticalAlignment="Top" FontSize="14" RenderTransformOrigin="0.122,1.303" FontWeight="Bold"/>

            <!--Default Image, Holds the image of the current player-->
            <Image x:Name="imgCurrentPlayer" Margin="222,516,10.286,43.143" Source="Images/default.jpg" StretchDirection="DownOnly"/>

            <!--Player Pieces-->
            <Image x:Name="imgDogPiece" Margin="253,36,10.286,554.143" Source="Images/dogPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="1"/>
            <Image x:Name="imgCarPiece" Margin="173,36,90.286,554.143" Source="Images/carPiece.jpg"  StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="2"/>
            <Image x:Name="imgBoatPiece" Margin="93,36,170.286,554.143" Source="Images/boatPiece.jpg" Stretch="Uniform" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="3"/>
            <Image x:Name="imgHatPiece" Margin="14,36,250.286,555.143" Source="Images/hatPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="4"/>
            <Image x:Name="imgThimblePiece" Margin="253,116,10.286,474.143" Source="Images/thimblePiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="5"/>
            <Image x:Name="imgIronPiece" Margin="173,116,90.286,474.143" Source="Images/ironPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="6"/>
            <Image x:Name="imgwheelbarrowPiece" Margin="93,116,170.286,474.143" Source="Images/wheelbarrowPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="7"/>
            <Image x:Name="imgBootPiece" Margin="13,116,250.286,474.143" Source="Images/bootPiece.jpg" StretchDirection="DownOnly" MouseDown="ImgMouseDown" Tag="8"/>

            <Button x:Name="btnConfirmPlayerPiece" Content="Confirm Piece" HorizontalAlignment="Left" Margin="123,208,0,0" VerticalAlignment="Top" Width="107" Height="26" Click="BtnConfirmPlayerPiece_Click"/>

        </Grid>
    </Grid>
</Window>
